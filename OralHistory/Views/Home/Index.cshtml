@model OralHistory.Models.User

@{
    ViewBag.Title = "Home Page";
}



<div class="container">

    <form class="row g-3" asp-controller="Home" asp-action="Index" method="post">


        <div class="col-md-6">
            <label asp-for="donor" class="form-label">Donor Name *</label>
            <!--<input asp-for="DonorName" type="text" class="form-control" id="DonorName" placeholder="First and Last Name">-->
            @Html.EditorFor(model => model.DonorName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DonorName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label for="narrator" class="form-label">Narrator Name * </label>
            <!--<input type="text" class="form-control" id="NarratorName" placeholder="First and Last Name">-->
            @Html.EditorFor(model => model.NarratorName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NarratorName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label for="email" class="form-label">Email *</label>
            <!--<input type="email" class="form-control" id="Email" placeholder="example@email.com">-->
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label for="phone" class="form-label">Phone: </label>
            <!--<input type="tel" class="form-control" id="PhoneNumber" placeholder="(XXX) XXX-XXXX">-->
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label for="title" class="form-label">Title of Oral History *</label>
            <!--<input type="text" class="form-control" id="title">-->
            @Html.EditorFor(model => model.TitleOH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TitleOH, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label for="interviewDate" class="form-label">Date of Interview: </label>
            <input type="date" class="form-control" id="Date">
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            <label for="audiofile" class="form-label">Audio File (.mp3) * </label>
            <input type="file" name="files" id="files" class="form-control" aria-label="file">
           
        </div>
        <div class="col-md-6">
            <label for="file" class="form-label">Additional Files (Transcripts, Images, etc.)</label>
            <input type="file" class="form-control" aria-label="file">
        </div>
        <div class="col-md-6">
            <br />
            <label for="deed" class="form-label">Click here to download and sign </label>&nbsp;
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Deed of Gift
            </button>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Deed of Gift</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="~/Documents/Deed-of-Gift-McGreal.pdf" width="100%" height="600">
                            </iframe>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <br />
            <p>
                Need Assistance with this form?
                <a href="https://www.dom.edu/mission-and-ministry/mcgreal/contact-us" target="_blank">Contact Us</a>
            </p>
        </div>
        <div class="col-12">
            <div class="center">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                
            </div>
        </div>
    </form>
</div>

